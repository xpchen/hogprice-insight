[
  {
    "template_id": "T01",
    "name": "标肥价差季节性",
    "category": "价差",
    "description": "每周判断标肥价差处于历史什么位置（季节性最常用）",
    "chart_type": "seasonality",
    "params": {
      "years": {
        "type": "multi_select",
        "default": [],
        "description": "年份范围（默认最近6年）",
        "editable": true
      },
      "x_mode": {
        "type": "select",
        "default": "week_of_year",
        "options": ["week_of_year", "month_day"],
        "description": "横轴模式",
        "editable": true
      },
      "geo_ids": {
        "type": "multi_select",
        "default": [],
        "description": "地区筛选（可选，默认全国）",
        "editable": true
      },
      "agg": {
        "type": "select",
        "default": "last",
        "options": ["mean", "last"],
        "description": "聚合方式（周度建议last，日度建议mean）",
        "editable": true
      }
    },
    "blocks": [
      {
        "block_id": "b1",
        "type": "seasonality",
        "title": "标肥价差季节性分析",
        "query": {
          "metric_code": "SPREAD_STANDARD_FATTY",
          "years": "{{params.years}}",
          "x_mode": "{{params.x_mode}}",
          "geo_ids": "{{params.geo_ids}}",
          "agg": "{{params.agg}}"
        }
      },
      {
        "block_id": "b2",
        "type": "summary",
        "title": "当前值统计",
        "calc": ["latest_value", "percentile_10", "percentile_50", "percentile_90", "deviation_from_mean"]
      }
    ],
    "export": {
      "format": ["xlsx"],
      "sheets": [
        {
          "name": "季节性数据",
          "type": "seasonality_table",
          "block_id": "b1"
        },
        {
          "name": "摘要统计",
          "type": "summary_table",
          "block_id": "b2"
        },
        {
          "name": "图表",
          "type": "chart",
          "block_id": "b1"
        }
      ]
    },
    "acceptance": [
      "选择年份后，一年一条线且对齐周序号",
      "当前周能输出历史分位",
      "导出包含宽表和图表"
    ]
  },
