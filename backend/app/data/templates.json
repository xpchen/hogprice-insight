  {
    "template_id": "T04",
    "name": "价格+标肥价差（区间双轴）",
    "category": "复盘",
    "description": "复盘某段时间内价格与价差联动，周报里很常见",
    "chart_type": "timeseries",
    "params": {
      "date_range": {
        "type": "daterange",
        "default": "YTD",
        "description": "时间范围（默认本年迄今或最近180天）",
        "editable": true
      },
      "geo_ids": {
        "type": "multi_select",
        "default": [],
        "description": "地区筛选（全国/省，可选）",
        "editable": true
      },
      "time_dimension": {
        "type": "select",
        "default": "daily",
        "options": ["daily", "weekly"],
        "description": "时间维度",
        "editable": true
      }
    },
    "blocks": [
      {
        "block_id": "b1",
        "type": "timeseries_dual_axis",
        "title": "生猪价格 vs 标肥价差",
        "query": {
          "metrics": [
            {
              "metric_code": "HOG_PRICE_NATIONAL",
              "axis": "left",
              "agg": "mean"
            },
            {
              "metric_code": "SPREAD_STANDARD_FATTY",
              "axis": "right",
              "agg": "mean"
            }
          ],
          "date_range": "{{params.date_range}}",
          "geo_ids": "{{params.geo_ids}}",
          "time_dimension": "{{params.time_dimension}}"
        }
      },
      {
        "block_id": "b2",
        "type": "summary",
        "title": "区间统计",
        "calc": ["min", "max", "mean", "last", "change_7d", "change_30d"]
      }
    ],
    "export": {
      "format": ["xlsx"],
      "sheets": [
        {
          "name": "区间数据",
          "type": "timeseries_table",
          "block_id": "b1"
        },
        {
          "name": "摘要统计",
          "type": "summary_table",
          "block_id": "b2"
        },
        {
          "name": "图表",
          "type": "chart",
          "block_id": "b1"
        }
      ]
    },
    "acceptance": [
      "单位不同自动双轴",
      "导出宽表列名清晰",
      "区间统计正确"
    ]
  },
